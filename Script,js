const bancoSaudacoes = {
    // Usamos RegExp para garantir que a palavra esteja isolada (\b)
    gatilhos: [/\boi\b/i, /\bolá\b/i, /\be aí\b/i, /\bom dia\b/i],
    
    respostas: [
        "Olá! Como posso ajudar?",
        "Oi! Tudo certo por aqui.",
        "Opa! O que mandas?"
    ],

    gerarResposta() {
        return this.respostas[Math.floor(Math.random() * this.respostas.length)];
    }
};

function processarMensagem(mensagemUsuario) {
    // 1. Filtro de mensagens automáticas de sistema
    // Se a mensagem contiver termos típicos de logs ou scrolls, a IA ignora
    const termosIgnorar = ["scroll automático", "recebi!", "mensagem do sistema"];
    const ehMensagemSistema = termosIgnorar.some(termo => 
        mensagemUsuario.toLowerCase().includes(termo)
    );

    if (ehMensagemSistema) return null; // Não responde nada

    // 2. Verificação de saudação real
    const encontrouGatilho = bancoSaudacoes.gatilhos.some(regex => 
        regex.test(mensagemUsuario)
    );

    if (encontrouGatilho) {
        return bancoSaudacoes.gerarResposta();
    }

    return "Entendi, mas não sei como responder a isso ainda.";
}

// TESTES:
console.log(processarMensagem("Oi, tudo bem?")); // Responde: "Olá!..."
console.log(processarMensagem("Recebi! O scroll automático garantiu...")); // Responde: null (Silêncio)
