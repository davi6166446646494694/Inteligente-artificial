// banco_de_dados.js

const bancoSaudacoes = {
    // Gatilhos que a IA deve reconhecer
    entradas: ["oi", "olá", "bom dia", "boa tarde", "boa noite", "e aí", "opa"],

    // Respostas possíveis para variar a interação
    respostas: [
        "Olá! Como posso ajudar você hoje?",
        "Oi! Tudo bem por aqui. E com você?",
        "Opa! Em que posso ser útil?",
        "Saudações! Sou sua assistente virtual. O que vamos fazer agora?"
    ],

    // Função para selecionar uma resposta aleatória
    gerarResposta() {
        const index = Math.floor(Math.random() * this.respostas.length);
        return this.respostas[index];
    }
};

// Lógica de processamento simples
function processarSaudacao(mensagemUsuario) {
    const mensagemFormatada = mensagemUsuario.toLowerCase().trim();

    // Verifica se a mensagem contém algum dos gatilhos
    const encontrouGatilho = bancoSaudacoes.entradas.some(gatilho => 
        mensagemFormatada.includes(gatilho)
    );

    if (encontrouGatilho) {
        return bancoSaudacoes.gerarResposta();
    } else {
        return "Desculpe, ainda estou aprendendo. Pode repetir de outra forma?";
    }
}

// Teste rápido
console.log(processarSaudacao("Oi, tudo bem?"));
